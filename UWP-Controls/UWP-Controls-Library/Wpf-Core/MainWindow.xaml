<Window x:Class="Wpf_Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Core"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        xmlns:xaml="clr-namespace:Microsoft.Toolkit.Wpf.UI.XamlHost;assembly=Microsoft.Toolkit.Wpf.UI.XamlHost">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <xaml:WindowsXamlHost Grid.Row="0" InitialTypeName="Windows.UI.Xaml.Controls.ColorPicker" />
        <xaml:WindowsXamlHost Grid.Row="1" InitialTypeName="UWP_Custom_Xaml_App.MainPage" />
        <xaml:WindowsXamlHost Grid.Row="2" InitialTypeName="UWP_Custom_Xaml_App.FunkyButton" />

    </Grid>
</Window>
